#!/usr/bin/env bash
source activate 
set -eux
time conda env update --prefix ${CONDA_DIR} --file environment_mamba.yml
rm -rf ${NB_PYTHON_PREFIX}
time mamba env update -p ${NB_PYTHON_PREFIX} --file environment.yml
time jupyter labextension install --no-build @jupyter-widgets/jupyterlab-manager
time jupyter labextension install --no-build  jupyterlab-plotly@4.14.3
time jupyter lab build --dev-build=False --minimize=True
time jupyter lab clean
time jlpm cache clean
time conda clean -yaf
